.carContainer {
  background: #eee;
  height: 100vh;
}
.carContainer .header {
  margin-left: 10rpx;
}
.carContainer .content {
  height: 100%;
}
.carContainer .content .noLogin {
  margin-top: 40%;
}
.carContainer .content .noLogin image {
  margin-left: 30%;
  width: 248rpx;
  height: 248rpx;
}
.carContainer .content .noLogin .btn {
  width: 480rpx;
  height: 92rpx;
  background: #bb2c08;
}
.carContainer .content .loginGoods {
  position: relative;
}
.carContainer .content .loginGoods .goods {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: relative;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  height: 220rpx;
  width: 100%;
  background: #fff;
}
.carContainer .content .loginGoods .goods .iconfont {
  position: absolute;
  top: 40%;
  left: 40rpx;
  -webkit-align-self: center;
          align-self: center;
  width: 38rpx;
  height: 38rpx;
}
.carContainer .content .loginGoods .goods .goodsImg {
  position: absolute;
  top: 30rpx;
  left: 100rpx;
  width: 172rpx;
  height: 172rpx;
}
.carContainer .content .loginGoods .goods .detail {
  position: absolute;
  top: 50rpx;
  left: 320rpx;
}
.carContainer .content .loginGoods .goods .detail .name {
  font-size: 26rpx;
  height: 36rpx;
  margin-bottom: 10rpx;
}
.carContainer .content .loginGoods .goods .detail .des {
  margin: 0 0 30rpx 0;
  font-size: 24rpx;
  height: 36rpx;
}
.carContainer .content .loginGoods .goods .detail .price {
  font-size: 26rpx;
  height: 39rpx;
}
.carContainer .content .loginGoods .goods .count {
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.carContainer .content .loginGoods .goods .count view {
  width: 60rpx;
  border: 1rpx solid #d9d9d9;
  text-align: center;
  line-height: 60rpx;
}
.carContainer .content .loginGoods .goods .count .reduce {
  border-right: 0rpx solid #d9d9d9;
}
.carContainer .content .loginGoods .goods .count .add {
  border-left: 0rpx solid #d9d9d9;
}
.carContainer .content .loginGoods .order {
  position: fixed;
  left: 0;
  bottom: 0rpx;
  background: #fff;
  width: 100%;
  height: 118rpx;
}
.carContainer .content .loginGoods .order .iconfont {
  position: absolute;
  top: 30%;
  left: 40rpx;
}
.carContainer .content .loginGoods .order .allPrice {
  position: absolute;
  top: 30%;
  right: 250rpx;
}
.carContainer .content .loginGoods .order .btn {
  position: absolute;
  top: 0;
  right: 0rpx;
  width: 225rpx;
  height: 118rpx;
  background: #bb2c08;
  text-align: center;
  line-height: 118rpx;
  color: #fff;
}
.carContainer .content .loginNoGoods {
  margin-top: 40%;
}
.carContainer .content .loginNoGoods image {
  margin-left: 30%;
  width: 248rpx;
  height: 248rpx;
}
.carContainer .content .loginNoGoods .btn {
  width: 480rpx;
  height: 92rpx;
  background: #bb2c08;
}

